{% extends 'BlogAdminBundle::base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}

{% block body -%}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">Post</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-2 col-md-8">
            
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ entity.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ entity.title }}</td>
                        </tr>
                        <tr>
                            <th>Slug</th>
                            <td>{{ entity.slug }}</td>
                        </tr>
                        <tr>
                            <th>Excerpt</th>
                            <td>{{ entity.excerpt }}</td>
                        </tr>
                        <tr>
                            <th>Content</th>
                            <td>{{ entity.content }}</td>
                        </tr>
                        <tr>
                            <th>Author email</th>
                            <td>{{ entity.authoremail }}</td>
                        </tr>
                        <tr>
                            <th>Status post</th>
                            <td>{{ entity.statuspost }}</td>
                        </tr>
                        <tr>
                            <th>Show comment</th>
                            <td>{% if entity.showcomment %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Enable comment</th>
                            <td>{% if entity.enablecomment %}Yes{% else %}No{% endif %}</td>
                        </tr>
                        <tr>
                            <th>Views post</th>
                            <td>{{ entity.viewspost }}</td>
                        </tr>
                        <tr>
                            <th>Published at</th>
                            <td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                        <tr>
                            <th>Updated at</th>
                            <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <ul class="record_actions">
                <li>
                    <a href="{{ path('admin_post') }}">
                        Back to the list
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin_post_edit', { 'id': entity.id }) }}">
                        Edit
                    </a>
                </li>
                <li>{{ form(delete_form) }}</li>
            </ul>
            
        </div>
    </div>
</div>
{% endblock %}
