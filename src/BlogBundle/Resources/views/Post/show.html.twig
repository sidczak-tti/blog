{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ entity.slug }}</td>
            </tr>
            <tr>
                <th>Excerpt</th>
                <td>{{ entity.excerpt }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ entity.content }}</td>
            </tr>
            <tr>
                <th>Author_email</th>
                <td>{{ entity.authoremail }}</td>
            </tr>
            <tr>
                <th>Status_post</th>
                <td>{{ entity.statuspost }}</td>
            </tr>
            <tr>
                <th>Show_comment</th>
                <td>{{ entity.showcomment }}</td>
            </tr>
            <tr>
                <th>Enable_comment</th>
                <td>{{ entity.enablecomment }}</td>
            </tr>
            <tr>
                <th>Views_post</th>
                <td>{{ entity.viewspost }}</td>
            </tr>
            <tr>
                <th>Published_at</th>
                <td>{{ entity.publishedat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('post_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
