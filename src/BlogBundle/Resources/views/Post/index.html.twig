{% extends 'BlogBundle::base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}

{% block body -%}
    
<div class="container">
    <div class="row">    
    	<div class="col-lg-12">
            <div class="page-header">
                <h2>Post list</h2>
            </div>
            <ul class="breadcrumb">
                <li><a href="{{ path('blog_homepage') }}">Start</a></li>
                <li class="active">Post</li>
            </ul>
    	</div>
    </div>
    <div class="row">
        <div class="col-md-8">
        {% for entity in entities %}
            <h2><a href="{{ path('post_show', { 'id': entity.id }) }}">{{ entity.title|title|raw }}</a></h2>
            <p>
                <i class="fa fa-calendar"></i> <a href="#">{% if entity.publishedat %}{{ entity.publishedat|date('l, F j, Y') }}{% endif %}</a> | 
                <i class="fa fa-user"></i> <a href="#">{{ entity.authoremail }}</a>
            </p>
            <p>
                {{ entity.excerpt|raw|slice(0, 300) }}
                {{ entity.excerpt|length > 300 ? '...' : ''}}
                {#{{ entity.excerpt|length > 300 ? entity.excerpt|raw|slice(0,300) ~ '...' : entity.excerpt|raw }}#}
            </p>
            <a class="btn btn-primary" href="{{ path('post_show', { 'id': entity.id }) }}">Read More <i class="fa fa-angle-right"></i></a>
            <hr/>
        {% endfor %} 
        </div>
        <div class="col-md-4">
            
            <ul class="nav nav-tabs nav-justified" style="margin-bottom: 15px">
                <li class="active">
                    <a href="#categories" data-toggle="tab"><i class="fa fa-share-alt"></i> Categories</a>
                </li>
                <li>
                    <a href="#tags" data-toggle="tab"><i class="fa fa-tags"></i> Tags</a>
                </li>
                <li>
                    <a href="#archives" data-toggle="tab"><i class="fa fa-folder"></i> Archives</a>
                </li>
            </ul>
            
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane fade in active" id="categories">
                    <div class="list-group">
                        <a class="list-group-item" href="#">Blog</a>
                        <a class="list-group-item" href="#">Shop</a>
                        <a class="list-group-item" href="#">No</a>
                    </div>
                </div>
                <div class="tab-pane fade" id="tags">
                    <p>Tags</p>
                </div>
                <div class="tab-pane fade" id="archives">
                    <p>Archives</p>
                </div>
            </div>
            
            <div class="page-header">
                <h4>{{'Categories'|upper}}</h4>
            </div>
            <div class="page-header">
                <h4>{{'Tags'|upper}}</h4>
            </div>
            <div class="page-header">
                <h4>{{'Archives'|upper}}</h4>
            </div>
            <div class="page-header">
                <h4>{{'Recent Posts'|upper}}</h4>
            </div>
            <div class="page-header">
                <h4>{{'Calendar'|upper}}</h4>
            </div>
            
        </div>
    </div>
</div>
    
