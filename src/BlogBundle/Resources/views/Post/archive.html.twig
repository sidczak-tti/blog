{% extends 'BlogBundle::base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}

{% block body -%}
    
<div class="container">
    <div class="row">    
    	<div class="col-lg-12">
            <div class="page-header">
                <h2>Archive: {{ archive }}</h2>
            </div>
            <ul class="breadcrumb">
                <li><a href="{{ path('blog_homepage') }}">Start</a></li>
                <li><a href="{{ path('post') }}">Blog</a></li>
                <li class="active">Archive: {{ archive }}</li>
            </ul>
    	</div>
    </div>
    <div class="row">
        <div class="col-md-8">
        {% for entity in entities %}
            <h2><a href="{{ path('post_show', { 'id': entity.id, 'category': entity.category.slug, 'title': entity.titleslug }) }}">{{ entity.title|title|raw }}</a></h2>
            <p>
                <i class="fa fa-calendar"></i> <a href="#">{% if entity.publishedat %}{{ entity.publishedat|date('l, F j, Y') }}{% endif %}</a> | 
                <i class="fa fa-user"></i> <a href="{{ path('blog_author', { 'email': entity.authoremail }) }}">{{ entity.authoremail }}</a> |
                <i class="fa fa-share-alt"></i> <a href="{{ path('blog_category', { 'slug': entity.category.slug }) }}">{{ entity.category }}</a>
            </p>
            <p>
                {{ entity.excerpt|raw|slice(0, 300) }}
                {{ entity.excerpt|length > 300 ? '[...]' : ''}}
                {#{{ entity.excerpt|length > 300 ? entity.excerpt|raw|slice(0,300) ~ '[...]' : entity.excerpt|raw }}#}
            </p>
            <a class="pull-right btn btn-primary" href="{{ path('post_show', { 'id': entity.id, 'category': entity.category.slug, 'title': entity.titleslug }) }}">Read More <i class="fa fa-angle-right"></i></a>
            <p>Tags:
                {% for tag in entity.tags %}
                    <a class="btn btn-default btn-xs" href="{{ path('blog_tag', { 'slug': tag.slug }) }}">{{ tag.name }}</a>
                {% endfor %}
            </p>
            <div class="clearfix"></div>
            <hr/>
        {% endfor %}
        
            <div class="row">
                <div class="col-md-12">
                    <p><strong>{{ total_posts }}</strong> posts in this archive
                        {% if last_page > 1 %}
                            - page <strong>{{ current_page }}/{{ last_page }}</strong>
                        {% endif %}</p>
                </div>
            </div>

            {% if last_page > 1 %}
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <ul class="pagination">
                          <li><a href="{{ path('blog_archive', { 'year': year, 'month': month, 'page': 1 }) }}">&lsaquo;</a></li>
                          <li><a href="{{ path('blog_archive', { 'year': year, 'month': month, 'page': previous_page }) }}">&laquo;</a></li>

                      {% for page in 1..last_page %}
                        {% if page == current_page %}
                          <li class="active"><a href="#">{{ page }}</a></li>
                        {% else %}
                          <li><a href="{{ path('blog_archive', { 'year': year, 'month': month, 'page': page }) }}">{{ page }}</a></li>
                        {% endif %}
                      {% endfor %}

                          <li><a href="{{ path('blog_archive', { 'year': year, 'month': month, 'page': next_page }) }}">&raquo;</a></li>
                          <li><a href="{{ path('blog_archive', { 'year': year, 'month': month, 'page': last_page }) }}">&rsaquo;</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            {% endif %} 
        
        </div>
        <div class="col-md-4">
            {{ include('BlogBundle:Post:_sidebar.html.twig', { 'categories': categories, 'tags': tags, 'archives': archives }) }}
        </div>
    </div>
</div>

{% endblock %}
